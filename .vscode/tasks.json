{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "powershell",
            "args": [
                "-c",
                "mingw32-make"
            ]
        },
        {
            "label": "build & run",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-c",
                "'mingw32-make run'"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-c",
                "'mingw32-make clean'"
            ]
        }
    ]
}